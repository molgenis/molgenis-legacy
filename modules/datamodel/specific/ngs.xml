<?xml version="1.0" encoding="UTF-8"?>
<molgenis name="org.molgenis" label="Next Generation Sequencing"
	depends="core,xgap,contact,system">
	<module name="ngs">
		<description>Extension to XGAP to support Next Gen Sequencing projects
			using the Illumina platform. Each work consists of Projects having
			one or more NgsSample. These samples are then put on a FlowcellLane,
			optionally with barcode.</description>
		<!--
			entity name="Project" extends="Investigation"> <description> A
			Project ngs info about a project. For example, starting and ending
			date.</description> field name="contractcode" type="string"
			auto="false" nillable="false" description="Contract code/Declaratie
			Nr (i.e. GG45)" unique="true" /> <field name="startdate"
			type="string" auto="false" nillable="false" description="Start date
			of the project (e.g. 2010-20-10 10:34:56)" unique="false" /> <field
			name="enddate" type="string" auto="false" nillable="false"
			description="End date of the project (e.g. 2010-30-10 14:42:11)"
			unique="false" /> <field name="investigator_id" type="xref"
			xref_entity="Investigator" nillable="true" description="Researcher in
			this project" xref_label="id" unique="false" /> <field
			name="labworker_id" type="xref" xref_entity="NgsPerson"
			nillable="true" description="Lab technician in charge of project"
			xref_label="id" unique="false" field name="workflow" type="xref"
			xref_entity="Workflow" nillable="false" description="Project
			Workflow" / </entity
		-->
		<entity name="NgsSample" extends="ObservationTarget">
			<description>Description of the sample/library</description>
			<field name="sampletype" type="enum" default="dna"
				enum_options="[dna,rna]" auto="false" nillable="false"
				description="Type of sample (dna/rna). Will become ontologyReference"
				unique="false" />
			<field name="description" type="text" auto="false" readonly="true"
				nillable="true" description="Description/Notes about the sample"
				unique="false" />
		</entity>
		<!--
			entity name="NgsSample" extends="Sample"> <description> This extended
			investigation provides extra fields for saving information of the
			customer, such as their address, telephone number, etc</description>
			<field name="name" type="string" nillable="false"
			description="Identifier for the sample that is unique within the
			project" unique="false" /> <field name="sampletype" type="enum"
			default="dna" enum_options="[dna,rna]" auto="false" nillable="false"
			description="Type of sample (dna/rna)" unique="false" /> <field
			name="origin" type="string" auto="false" nillable="true"
			description="Origin of the sample (i.e. duck, pig, human)"
			unique="false" /> <field name="readlength" type="int" auto="false"
			readonly="true" nillable="true" description="Length of the read to be
			executed" unique="false" /> <field name="location" type="string"
			auto="false" readonly="true" nillable="true" description="Location of
			a sample (i.e. freezer in rom 502.20)" unique="false" /> <field
			name="library" type="xref" xref_entity="Library" nillable="false"
			description="The library in which this sample was." /> <field
			name="project" type="xref" xref_entity="Project" nillable="true"
			description="Project that the sample belongs to" xref_label="name"
			unique="false" /> <field name="workflowElement" type="xref"
			xref_entity="WorkflowElement" nillable="true" description="At what
			workflow element the sample is currently at" xref_label="name"
			unique="false" /> <field name="description" type="text" auto="false"
			readonly="true" nillable="true" description="Description/Notes about
			the sample" unique="false" /> </entity
		-->
		<entity name="Flowcell" extends="ObservationTarget" xref_label="name">
			<description> A Flowcell is a unit of measuremnt, currently, 8 lanes
				measurement on the Illumina Genome Analyzer</description>
			<field name="machine" type="xref" xref_entity="Machine"
				description="The Illumina machine it was run on" />
			<field name="date" type="date"
				description="The date the flowcell was run on the machine" />
		</entity>
		<entity name="LibraryLane" extends="ObservationElement">
			<description>This is actually our worksheet. Name is typically
				library name, or of there is only one sample per library it may be
				sample name. Description of the sample library that has been
				measured on a flowcell. A lane is one lane on the Illumina Genome
				Analyzer. At this point, the library entity is not traced
				seperately. Optionally, a sample is barcoded.</description>
			<field name="status" type="enum" enum_options="[to do,done]"
				default="to do" nillable="false"
				description="Status of the analysis of this flowcell-lane-sample combination" />
			<field name="sample" type="xref" xref_entity="NgsSample"
				description="The sample which is measured on this lane+library combination." />
			<field name="flowcell" type="xref" xref_entity="Flowcell"
				description="The flowcell to which this lane belongs" />
			<field name="lane" type="enum" enum_options="[1,2,3,4,5,6,7,8]"
				description="The lane number that is unique within a flow cell. Typically in range 1-8" />
			<field name="barcode" type="xref" xref_entity="LibraryBarcode"/>
			<field name="capturing" type="xref" xref_entity="LibraryCapturing" />
			<unique fields="flowcell,lane,name" description="Lane and sample is unique per flowcell" />
		</entity>
		<entity name="Worksheet">
			<!-- simple placeholder of above structure -->
			<field name="id" type="autoid"/>
			<field name="status" type="string" />
			<field name="sample" type="string" />
			<field name="barcode" type="string" />
			<field name="project" type="string" />
			<field name="investigator" type="string" />
			<field name="lane" type="string" />
			<field name="date" type="date" />
			<field name="machine" type="string" />
			<field name="flowcell" type="string" />
			<field name="capturing" type="string" />
			<field name="remark" type="string" />
			<unique fields="flowcell,lane,sample" />
		</entity>
		<!--
			entity name="ProjectWorkflow" label="Project Workflow"
			implements="Identifiable"> <description> A project workflow describes
			the protocol applications that exist for a given project, per
			sample.</description> <field name="workflow" type="xref"
			xref_entity="Workflow" description="Reference to the workflow" />
			<field name="project" type="xref" xref_entity="Project"
			description="Reference to the project which contains the given
			protocolApp" /> <field name="NgsSample" type="xref"
			xref_entity="NgsSample" description="Reference to the sample which
			will follow the protocol" /> </entity>
		-->
		<entity name="LibraryBarcode" implements="Identifiable" xref_label="barcode">
			<field name="barcode" type="string" unique="true"
				description="The nucleotide sequence which forms the barcode" />
		</entity>
		<entity name="LibraryCapturing" implements="Identifiable" xref_label="capturing">
			<field name="capturing" type="string" unique="true" />
		</entity>
		<entity name="Machine" implements="Identifiable" xref_label="machine">
			<field name="machine" type="string" unique="true" />
		</entity>
		<entity name="NgsPerson" extends="Person">
			<description> An ngs person</description>
			<field name="labworker" nillable="true" type="boolean"
				description="Indicate whether the contact is a labworker" />
		</entity>
		<entity name="Investigator" extends="Person">
			<description>Researcher in a given project</description>
		</entity>
	</module>
</molgenis>